@model BlogSystem.MVCSite.Models.UserViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;

}
<link href="~/static/1/css/style.css" rel="stylesheet" />

<main>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <form class="form">
            <div class="form__cover"></div>
            <div class="form__loader">
                <div class="spinner active">
                    <svg class="spinner__circular" viewBox="25 25 50 50">
                        <circle class="spinner__path" cx="50" cy="50" r="20" fill="none" stroke-width="4" stroke-miterlimit="10"></circle>
                    </svg>
                </div>
            </div>
            <div class="form__content">
                <h1>我即将成为一个小码农</h1>
               
                <div class="styled-input">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "styled-input__input" } })


                    <div class="styled-input__placeholder"> <span class="styled-input__placeholder-text">Email</span> </div>
                    <div class="styled-input__circle"></div>
                </div>
                <div class="styled-input">

                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "styled-input__input", @type = "password" } })
                    <div class="styled-input__placeholder"> <span class="styled-input__placeholder-text">Password</span> </div>
                    <div class="styled-input__circle"></div>
                </div>
                <div class="styled-input">
                  
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "styled-input__input" ,@type= "password" } })
                    <div class="styled-input__placeholder"> <span class="styled-input__placeholder-text">ConfirmPassword</span> </div>
                    <div class="styled-input__circle"></div>
                </div>
                <button type="submit" class="styled-button"> <span class="styled-button__real-text-holder"> <span class="styled-button__real-text">注册</span> <span class="styled-button__moving-block face"> <span class="styled-button__text-holder"> <span class="styled-button__text">注册</span> </span> </span><span class="styled-button__moving-block back"> <span class="styled-button__text-holder"> <span class="styled-button__text">注册</span> </span> </span> </span> </button>
                <a href="Login" class="btn styled-button"> <span class="styled-button__real-text-holder"> <span class="styled-button__real-text">已有账号，前往登录</span> <span class="styled-button__moving-block face"> <span class="styled-button__text-holder"> <span class="styled-button__text">已有账号，前往登录</span> </span> </span><span class="styled-button__moving-block back"> <span class="styled-button__text-holder"> <span class="styled-button__text">已有账号，前往登录</span> </span> </span> </span> </a>
            </div>
        </form>
    }
</main>

<script src="~/static/1/js/index.js"></script>
<script src="~/static/js/jquery.min.js"></script>
