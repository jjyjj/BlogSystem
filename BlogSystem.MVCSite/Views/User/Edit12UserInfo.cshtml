    <script src="~/static/js/template.js"></script>
    <script>
        //触发隐藏的file表单
        function makeThisfile() {
            $('#image').click();
        }

        //file表单选中文件时,让file表单的val展示到showname这个展示框
        $('#image').change(function () {
            $('#showname').val($(this).val())
        })
        // 保存图片
        function saveStudent() {
            $("#student_sfm").form("submit", {
                url: "../../Controllers/EditUserInfo", // 上传图片链接
                success: function (result) {
                    if (result == "success") {
                        $.messager.alert("系统提示", "保存成功！");
                        resetForm();
                    } else if (result == "error") {
                        $.messager.alert("系统提示", "保存失败！");
                        return;
                    }
                }
            })
        }




        function btnDelete(btn) {
            if (confirm("您确定要删除吗？")) {
                $.ajax({
                    url: "/Article/DeleteOneArtcileById/" + btn.value,
                    type: "post",
                }).done(() => {
                    alert("ok");

                });
            }
        }
    </script>
