    <main id="main">

        <form id="student_sfm" method="post" enctype="multipart/form-data">

            <div class="container">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">

                            <span class="control-label col-md-2">邮箱</span>
                            <div class="col-md-10">

                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-2">密码</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-2">设置头像</span>
                            <div class="col-md-10">

                                <input name="image" type="file" id="image" style="display: none" />

                                <div class="input-append">
                                    <!-- 用于展示上传文件名的表单 -->
                                    <input id="showname" class="input-large" type="text" style="height:25px;">
                                    <!-- 点击触发按钮 -->
                                    <a class="btn browse" onclick="makeThisfile()" id="browse">浏览</a>
                                </div>
                                <input type="file" name="name"   value="@Html.Raw(Model.ImagePath)"/>


                                @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-2">更改昵称</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SiteName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SiteName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn browse" />
                            </div>
                        </div>
                    </div>
                    <div style="height:30px"></div>
                    <hr />
                }
            </div>

        </form>
    </main>



