<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>后台管理中心</title>
    <link href="~/static/layui/css/layui.css" rel="stylesheet" />
</head>
<body class="layui-layout-body">
    <div class="layui-layout layui-layout-admin" style="width:100%">
        <div class="layui-header">
            <div class="layui-logo">layui 后台布局</div>
          
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a href="javascript:;">
                        <img src="@ViewBag.AdminImg" class="layui-nav-img">
                        @ViewBag.AdminName
                    </a>
                 
                </li>
                <li class="layui-nav-item"><a href="">注销</a></li>
            </ul>
        </div>

        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                <ul class="layui-nav layui-nav-tree" lay-filter="test">
                    <li class="layui-nav-item layui-nav-itemed">
                        <a class="" href="../Admin/AllArticleList">文章管理</a>
                        @*<dl class="layui-nav-child">
                            <dd><a href="javascript:;">查看</a></dd>
                            <dd><a href="javascript:;">列表二</a></dd>
                            <dd><a href="">超链接</a></dd>
                        </dl>*@
                    </li>
                    <li class="layui-nav-item">
                        <a href="../Admin/categorylist">文章类别管理</a>
                        
                    </li>
                    <li class="layui-nav-item"><a href="../Admin/AllCommentList">评论管理</a></li>
                    <li class="layui-nav-item"><a href="../Admin/AllUserList">用户管理</a></li>
                    <li class="layui-nav-item"><a href="../Admin/AllBannerList">轮播图管理</a></li>
                </ul>
            </div>
        </div>

        <div class="layui-body">
            <!-- 内容主体区域 -->
            <div style="padding: 15px;">   @RenderBody()</div>
        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            © layui.com - 底部固定区域
        </div>
    </div>

    <script src="~/static/layui/layui.js"></script>
    <script>
        //JavaScript代码区域
        layui.use('element', function () {
            var element = layui.element;

        });
    </script>
</body>
</html>